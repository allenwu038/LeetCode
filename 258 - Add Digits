# Python3
# runtime: faster than 95.38% of submissions
# memory: less than 5.26% of submissions
# NOTE: more on math with mods for digital roots - https://brilliant.org/wiki/digital-root/\

class Solution:
    def addDigits(self, num: int) -> int: 
        if num < 10:
            return num
        return num%9 if num%9 != 0 else 9
                
